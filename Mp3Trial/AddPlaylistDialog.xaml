<Window x:Class="MusicPlayer.AddPlaylistDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enter Playlist Name" Height="161" Width="300" ResizeMode="NoResize">
    <Grid Margin="0,0,0,1">
        <Button Name="OkButton" Content="Ok" HorizontalAlignment="Right" Margin="0,0,15,10" VerticalAlignment="Bottom" Width="75" Click="Button_Click_1"/>
        <TextBox Name="PlaylistNameTextBox" Height="23" Margin="15,35,15,-46" TextWrapping="NoWrap" VerticalAlignment="Top"/>
    </Grid>
</Window>
