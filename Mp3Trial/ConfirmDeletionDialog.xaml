<Window x:Class="MusicPlayer.ConfirmDeletionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Confirm Deleting the playlist" 
        Height="160" Width="350" ResizeMode="NoResize">
    <Grid>
        <Button Name="btnOk" Content="Ok" HorizontalAlignment="Right" Margin="0,0,90,10" VerticalAlignment="Bottom" Width="55" Click="btnOk_Click"/>
        <Button Name="btnCancel" Content="Cancel" HorizontalAlignment="Right" Margin="0,0,15,10" VerticalAlignment="Bottom" Width="55" Click="btnCancel_Click"/>
        <Label Name="PlaylistNameTextBox" Height="25" VerticalAlignment="Top" HorizontalAlignment="Stretch" Margin="5,40,5,50"
               Content="Are you sure you want to delete the selected playlist?"/>
    </Grid>
</Window>
